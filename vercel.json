{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/actions", "dest": "/actions.html" },
    { "src": "/journal", "dest": "/journal.html" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/server.js" }
  ]
} 